<%-include('../includes/header.ejs')%>
<link rel='stylesheet' href='/stylesheets/nouveau-site.css' />
</head>
<%-include('../includes/navigation.ejs')%>
<body>
    <div class="container">
        <h1>Nouveau site de dépistage</h1>
        <form class='formulaire-nouveau-site' id='add-site' name='add-site' method="POST" action="/admin/ajouter-site" enctype="multipart/form-data">
            <h3 class='label-form'>Informations et adresses</h3>

            <div class="form-group">
                <label for="nom">Nom du site</label>
                <input required id="nom" class="form-control" placeholder="Nom du site" name="nomSite">
            </div>
            <div class="form-group">
                <label>Numéro et nom de la voie</label>
                <input required class="form-control" placeholder="Numéro et voie" name='adresseSite'>
            </div>
            <div class="form-group">
                <label>Code postal</label>
                <input required class="form-control" placeholder="Code postale" name='cpSite'>
            </div>
            <div class="form-group">
                <label>Ville</label>
                <input required class="form-control" placeholder="Ville" name='villeSite'>
            </div>
            <div class="form-group">
                <label>Description du site</label>
                <textarea required class="form-control" placeholder="Description du site" name='descriptionSite'></textarea>
            </div>
            <div class="form-group">
                <label>Photos</label>
                <input class='form-control' type="file" name="images" id="images" multiple>
            </div>
            <h3 class='label-form'>Créneaux</h3>


            <div class="table-responsive">
                <table class="table table-bordered" id="dynamic_field">
                    <tr>
                        <td style="vertical-align:middle;">
                            <label class='creneau'>Nouveau créneau</label>
                        </td>
                        <td>
                            <label>Date</label>
                            <input required class="form-control datepick" type="text" id="datepicker1" name="dateCreneau1" autocomplete="off">
                        </td>
                        <td>
                            <label>Début de la tranche horaire</label>
                            <select class='form-control' name="debutCreneau1" required>
                                <option disabled selected value>Choisissez un horaire</option>
                                <option value="6">06h</option>
                                <option value="7">07h</option>
                                <option value="8">08h</option>
                                <option value="9">09h</option>
                                <option value="10">10h</option>
                                <option value="11">11h</option>
                                <option value="12">12h</option>
                                <option value="13">13h</option>
                                <option value="14">14h</option>
                                <option value="15">15h</option>
                                <option value="16">16h</option>
                                <option value="17">17h</option>
                                <option value="18">18h</option>
                                <option value="19">19h</option>
                                <option value="20">20h</option>
                                <option value="21">21h</option>
                                <option value="22">22h</option>
                                <option value="23">23h</option>
                            </select>
                        </td>
                        <td>
                            <label>Fin de la tranche horaire</label>
                            <select class='form-control' name="finCreneau1" required>
                                <option disabled selected value>Choisissez un horaire</option>
                                <option value="6">06h</option>
                                <option value="7">07h</option>
                                <option value="8">08h</option>
                                <option value="9">09h</option>
                                <option value="10">10h</option>
                                <option value="11">11h</option>
                                <option value="12">12h</option>
                                <option value="13">13h</option>
                                <option value="14">14h</option>
                                <option value="15">15h</option>
                                <option value="16">16h</option>
                                <option value="17">17h</option>
                                <option value="18">18h</option>
                                <option value="19">19h</option>
                                <option value="20">20h</option>
                                <option value="21">21h</option>
                                <option value="22">22h</option>
                                <option value="23">23h</option>
                            </select>
                        </td>
                        <td style="vertical-align:middle;"><button type="button" name="add" id="add"
                                class="btn btn-success">Ajouter un créneau</button></td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <button id='submit' type="submit" class="btn btn-primary">Ajouter le site</button>
            </div>

        </form>
    </div>
</body>

</html>
