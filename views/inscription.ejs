<%-include('./includes/header.ejs')%>
<link rel='stylesheet' href='/stylesheets/connexion.css' />
</head>
<%-include('./includes/navigation.ejs')%>

<body>
  
  <% if (errorMessage) { %>
  <div class="user-message user-message--error"><%= errorMessage %></div>
  <% } %>
  <form action='/inscription' method='POST'>
    <div class="wrapper">
      <h1 style="text-align: center;">Inscription</h1>
      <div class="form-group">
        <label>Nom</label>
        <input class="form-control" name='nom' placeholder="Nom" required>
      </div>
      <div class="form-group">
        <label>Prénom</label>
        <input class="form-control" name='prenom' placeholder="Prénom" required>
      </div>
      <div class="form-group">
        <label style="text-align: center;">Numéro de téléphone</label>
        <input class="form-control" name='tel' placeholder="téléphone" type='tel' required>
      </div>
      <div class="form-group">
        <label style="text-align: center;">Adresse email</label>
        <input class="form-control" name='email' placeholder="Adresse email" required>
      </div>
      <div class="form-group">
        <label style="text-align: center;">Mot de passe</label>
        <input class="form-control" name='password' placeholder="Mot de passe" type='password' required>
      </div>
      <div class="form-group">
        <label style="text-align: center;">Mot de passe</label>
        <input class="form-control" name='repeatPassword' placeholder="Répétez le mot de passe" type='password'
          required>
      </div>
      <div class="text-center">
        <button style="width: 50%;margin-top: 15px;" class="btn btn-primary" type='submit'>Confirmer</button>
      </div>
    </div>
  </form>
</body>
<%-include('./includes/footer.ejs')%>

</html>